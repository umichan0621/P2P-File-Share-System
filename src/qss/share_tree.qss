/*TreeWidget样式*/
QTreeWidget
{
    show-decoration-selected:1;/*整行的效果*/
    font-family:"Microsoft YaHei";
    font-size:16px;
    background:transparent;
    border:none;
    padding:0px;
    margin:0px;
}

QTreeWidget[TreeWidget='light']
{
    color:#727272;
}

QTreeWidget[TreeWidget='dark']
{
    color:#aaaaaa;
}

/*Header样式*/
QHeaderView
{
	font-family:"Microsoft YaHei";
    font-size:20px;
    background:transparent;
}

QHeaderView[TreeWidget='light']
{
    border-bottom:2px solid #e5e5e5;
}

QHeaderView[TreeWidget='dark']
{
    border-bottom:2px solid #494949;
}

QHeaderView::section[TreeWidget='light']
{
    background:transparent;
    color:#494949;
}

QHeaderView::section[TreeWidget='dark']
{
    background:transparent;
    color:#e5e5e5;
}
/*Header样式*/

/*Item样式*/
QTreeWidget::item
{
	border:none;
    padding-left:0px;
    padding-right:15px;
    margin:0px;
}

QTreeWidget::item[TreeWidget='light']:hover
{
    background:#ecf1ff;
}

QTreeWidget::item[TreeWidget='light']:selected
{
    color:#5b5bfa;
}

QTreeWidget::item[TreeWidget='dark']:hover
{
    background:#444444;
}

QTreeWidget::item[TreeWidget='dark']:selected
{
    color:#ffffff;
}

QTreeWidget::branch[TreeWidget='light']:hover
{
    background:#ecf1ff;
}

QTreeWidget::branch[TreeWidget='dark']:hover
{
    background:#444444;
}
/*Item样式*/
