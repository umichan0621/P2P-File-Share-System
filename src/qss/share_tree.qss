/*按钮样式*/
QPushButton
{
	border:none;
	width:23px;
	height:20px;
	background-color:transparent;
	background-position:center;
	background-repeat:no-repeat;
}

QPushButton:hover
{
	border:none;
	background-color:transparent;
	background-position:center;
	background-repeat:no-repeat;
}

QPushButton[Button='link']
{
	image:url(image/link.svg);
}

QPushButton[Button='link']:hover
{
	image:url(image/link_choose.svg);
}

QPushButton[Button='folder']
{
	image:url(image/folder.svg);
}

QPushButton[Button='folder']:hover
{
	image:url(image/folder_choose.svg);
}

QPushButton[Button='close']
{
	image:url(image/close.svg);
}

QPushButton[Button='close']:hover
{
	image:url(image/close_choose.svg);
}
/*按钮样式*/

/*CheckBox*/
QCheckBox
{
    font-family:"Microsoft YaHei";
    font-size:16px;
    background:transparent;
}
QCheckBox[CheckBox='light']
{
    color:#727272;
}
QCheckBox[CheckBox='dark']
{
    color:#aaaaaa;
}

QCheckBox[CheckBox='light']:checked
{
    color:#5b5bfa;
}

QCheckBox[CheckBox='dark']:checked
{
    color:#ffffff;
}

QCheckBox::indicator
{
    border-radius:2px; 
	width:12px;
	height:12px;
    margin-top:2px;
    margin-right:2;
}

QCheckBox::indicator[CheckBox='light']
{
    border:1px solid #727272;
}

QCheckBox::indicator[CheckBox='dark']
{
    border:1px solid #aaaaaa;
}

QCheckBox::indicator:unchecked:hover
{
    border:1px solid #5b5bfa;
    border-radius:2px; 
    background:transparent;
    margin-right:2;
}

QCheckBox::indicator:checked 
{
    border:1px solid #5b5bfa;
    border-radius:2px; 
    background:#5b5bfa;
    margin-right:2;
    color:red;
	image: url(:/Images/checkBoxCheckedPressed);
}
/*CheckBox*/
